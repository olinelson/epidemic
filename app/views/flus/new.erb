<h1>Make a Flu:</h1>

<% if !!flash[:errors] %>
    <ul>
    <% flash[:errors].each do |e| %>
        <li> <%= e %> </li>
    <% end %>
    </ul>
<% end %>

<%= form_for @flu do |f| %>
    <%= f.label :strain %>
    <%= f.text_field :strain %>
    <%= f.label :nickname %>
    <%= f.text_field :nickname %>
    <%= f.label :fatal %>
    <%= f.check_box :fatal %>
    <%= f.submit %>
<% end %>